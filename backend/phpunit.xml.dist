<?xml version="1.0" encoding="UTF-8"?>

<!-- https://docs.phpunit.de/en/12.1/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="backend/vendor/autoload.php"
         colors="true"
         columns="max"
         executionOrder="depends,defects">

    <testsuites>
        <testsuite name="all-tests">
            <directory>tests</directory>
        </testsuite>
        <testsuite name="unit-tests">
            <directory>backend/tests/unit</directory>
            <exclude>backend/tests/integration</exclude>
        </testsuite>
        <testsuite name="integration-tests">
            <directory>backend/tests/integration</directory>
            <exclude>backend/tests/unit</exclude>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory>backend/src</directory>
        </include>
    </source>

    <logging>
        <junit outputFile="backend/target/logs/junit.xml"/>
        <teamcity outputFile="backend/target/logs/teamcity.txt"/>
    </logging>
</phpunit>
